<div class="panel affix-top" >
  <div class="panel-heading">Edit profile</div>
  <div class="panel-body">
    <ul class="nav nav-tabs">
      <li role="presentation" class="active"><a href="#general" aria-controls="general" role="tab" data-toggle="tab">General</a></li>
      <li role="presentation"><a href="#password" aria-controls="password" role="tab" data-toggle="tab">Change Password</a></li>
    </ul>
    <div class="tab-content">
      <div role="tabpanel" class="tab-pane active" id="general">
        <%= form_for @user do |form| %>
            <div class="form-group">
              <label for="exampleInputEmail1">Email</label>
              <%= form.text_area :email, class: 'form-control', disabled: true %>
            </div>
            <div class="form-group">
              <label for="exampleInputEmail1">About</label>
              <%= form.text_area :about, class: 'form-control', placeholder: 'Short info', id: '' %>
            </div>
            <div class="form-group">
              <label for="exampleInputPassword1">Contact Phone</label>
              <%= form.text_field :contact_phone, class: 'form-control',  placeholder: 'Your contact phone' %>
            </div>
            <button type="submit" class="btn btn-default">Submit</button>
        <% end %>
      </div>
      <div role="tabpanel" class="tab-pane" id="password">
        <%= form_for @user do |form| %>
            <div class="form-group col-md-6">
              <%= form.label :password %>
              <%= form.password_field :password, class: 'form-control',  placeholder: 'Password' %>
            </div>
            <div class="form-group col-md-6">
              <%= form.label :password_confirmation %>
              <%= form.password_field :password_confirmation, class: 'form-control',  placeholder: 'Password confirmation' %>
            </div>
            <button type="submit" class="btn btn-default">Submit</button>
        <% end %>
      </div>
    </div>

  </div>
</div>
