<p id="notice"><%= notice %></p>

<div class="panel affix-top" >
  <div class="panel-heading" >Menus</div>
  <div class="panel-body">

    <%= link_to 'New Menu', new_menu_path, class: 'btn btn-primary' %>
    <br>
    <br>


    <table class="table">
      <thead>
      <tr>
        <th>Day</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @menus.each do |menu| %>
          <tr>
            <td><%= menu.weekday.capitalize %></td>
            <td><%= link_to 'Show', menu %></td>
            <td><%= link_to 'Edit', edit_menu_path(menu) %></td>
            <td><%= link_to 'Destroy', menu, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
      <% end %>
      </tbody>
    </table>

  </div>
</div>
