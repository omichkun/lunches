<%= form_with(model: menu, local: true) do |form| %>
  <% if menu.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(menu.errors.count, "error") %> prohibited this menu from being saved:</h2>

      <ul>
      <% menu.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.select :weekday, Menu.weekdays.keys.map {|k| [k, k]}, {include_blank: "Weekday"}, class: 'form-control' %>
  </div>

    <h4>First courses</h4>
    <%= form.select(:food_ids, Food.first_course.collect {|f| [ f.name, f.id ] }, {:include_blank => false}, {class: 'form-control',
                 :multiple => "multiple"}) %>

    <h4>Main courses</h4>
    <%= form.select(:food_ids, Food.main_course.collect {|f| [ f.name, f.id ] }, {:include_blank => false}, {class: 'form-control',
                 :multiple => "multiple"}) %>

    <h4>Drinks courses</h4>
    <%= form.select(:food_ids, Food.drink.collect {|f| [ f.name, f.id ] }, {:include_blank => false}, {class: 'form-control',
                 :multiple => "multiple"}) %>

  <br>
  <div class="actions">
    <%= form.submit 'Submit', class: 'btn btn-success' %>
  </div>
<% end %>
