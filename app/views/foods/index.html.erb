<p id="notice"><%= notice %></p>

<div class="panel" >
  <div class="panel-heading" >Foods</div>
  <div class="panel-body">
<%= link_to 'New Food', new_food_path, class: 'btn btn-primary' %>
<br>
<br>


<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Food type</th>
      <th>Image</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @foods.each do |food| %>
      <tr>
        <td><%= food.name %></td>
        <td><%= food.food_type %></td>
        <td><%= image_tag(food.image.thumb.url) if (food.image && food.image.length > 0 ) %></td>
        <td><%= food.price %></td>
        <td><%= link_to 'Show', food %></td>
        <td><%= link_to 'Edit', edit_food_path(food) %></td>
        <td><%= link_to 'Destroy', food, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

  </div>
</div>
